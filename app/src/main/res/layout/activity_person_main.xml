<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".person.PersonMain">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/person"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/re"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/fanhui" />

    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:background="@color/person"
                    app:srcCompat="?attr/colorButtonNormal">


                    <com.example.yuan.Cir.CirView xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/Cirimageview"
                        android:layout_width="73dp"
                        android:layout_height="72dp"

                        android:layout_centerVertical="true"
                       android:layout_marginLeft="50dp"
                        android:src="@drawable/huodong1"
                        circleimageview:civ_border_color="#8F8F8F"
                        circleimageview:civ_border_overlay="false"
                        circleimageview:civ_border_width="2dp"
                        circleimageview:civ_fill_color="@android:color/holo_blue_light" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="207dp"
                        android:gravity="center"
                        android:src="@drawable/youhui1"
                        android:text="未登录"
                        android:textSize="25dp"/>

                </RelativeLayout>
                <ListView
                    android:id="@+id/ListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="180dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false"
                    >
                </ListView>
                <View
                    android:layout_marginTop="180dp"
                    android:layout_height="3px"
                    android:layout_width="match_parent"
                    android:background="#708090"/>
                <View
                    android:layout_marginTop="483dp"
                    android:layout_height="3px"
                    android:layout_width="match_parent"
                    android:background="#708090"/>
    <View
        android:layout_marginTop="510dp"
        android:layout_height="3px"
        android:layout_width="match_parent"
        android:background="#708090"/>
    <View
        android:layout_marginTop="570dp"
        android:layout_height="3px"
        android:layout_width="match_parent"
        android:background="#708090"/>
    <LinearLayout
        android:id="@+id/canal"
        android:layout_marginTop="510dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@mipmap/canal"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="注销登录"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/item_image2"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:padding="5dp"
            android:src="@mipmap/jiantou"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/MENU"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/shouye"
            android:drawablePadding="6dp"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/anli"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="案例"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/threed"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="3D"
            />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/wode"
            android:drawablePadding="6dp"

            />

    </LinearLayout>
</RelativeLayout>