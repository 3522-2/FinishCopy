<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        android:layout_alignParentTop="true" />

    <LinearLayout
        android:background="#44000000"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/viewpager">
        <TextView
            android:id="@+id/tv_title"
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:textColor="#ffffff"
            android:text="文本"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_point_group"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="198dp"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/effect_picture"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/xgt"
            android:text="效果图" />

        <ImageView
            android:id="@+id/meterials_picture"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cl"
            android:text="材料" />

        <ImageView
            android:id="@+id/budget"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ys"
            android:text="预算" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/a" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:id="@+id/huodong1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/huodong1"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/huodong2"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/huodong2"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/a"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/a"/>
    </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/MENU"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/textview1"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/shouye"
            android:drawablePadding="6dp"

            />

        <ImageView
            android:id="@+id/textview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/anli"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="案例"
           />

        <ImageView
            android:id="@+id/textview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/threed"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="3D"
          />
        <ImageView
            android:id="@+id/textview4"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/wode"
            android:drawablePadding="6dp"

           />

    </LinearLayout>


</RelativeLayout>

