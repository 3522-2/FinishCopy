<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        android:layout_alignParentTop="true" />

    <LinearLayout
        android:background="#44000000"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/viewpager">
        <TextView
            android:id="@+id/tv_title"
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:textColor="#ffffff"
            android:text="文本"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_point_group"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/effect_picture"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/xgt"
            android:text="效果图" />

        <ImageView
            android:id="@+id/meterials_picture"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cl"
            android:text="材料" />

        <ImageView
            android:id="@+id/budget"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ys"
            android:text="预算" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/liuCheng"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/liucheng" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:id="@+id/huodong1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/huodong1"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/huodong2"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/huodong2"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="推荐案例"
                    android:textSize="25dp"/>
                <ImageView
                    android:id="@+id/jaintou11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:background="@mipmap/jiantou"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/tuijian1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@drawable/example1_1"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="传统风格与现代时尚元素的融合与碰撞"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tujian2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@drawable/example2_2"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="沉稳不失格调与时尚"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/gushi"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/gushi"/>
    </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/MENU"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/textview1"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/shouye"
            android:drawablePadding="6dp"

            />

        <ImageView
            android:id="@+id/textview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/anli"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="案例"
           />

        <ImageView
            android:id="@+id/textview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/threed"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="3D"
          />
        <ImageView
            android:id="@+id/textview4"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/wode"
            android:drawablePadding="6dp"

           />

    </LinearLayout>


</RelativeLayout>

