<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XGT.XgtMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/person"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/return1"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/fanhui" />
    </LinearLayout>

<LinearLayout

    android:layout_marginTop="30dp"
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Spinner
            android:entries="@array/fengGe"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/style1">
        </Spinner>
        <Spinner
            android:entries="@array/housetype"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/housetype">
        </Spinner>
        <Spinner
            android:entries="@array/area"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/area">
        </Spinner>
    </LinearLayout>
    <View
        android:id="@+id/v_1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/View1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/v_1">

        <RelativeLayout
            android:id="@+id/border1"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tdshow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="142平新中式，传统风格与现代时尚元素的融合与碰撞" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/example1_3" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/example1_4" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/border2"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/tdshow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="152平美式风格，沉稳不失格调与时尚" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/example2_1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/example2_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/border3"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/tdshow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="330平复式欧式风格，时尚优雅之作"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/example3_1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/example3_4" />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>