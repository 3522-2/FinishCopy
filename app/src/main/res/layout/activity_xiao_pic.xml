<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".person.XiaoPic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/person"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/re"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="案例图片信息"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="客厅"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/keting"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/zeng" />



                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="66dp"
                    android:background="@drawable/shape">
                    <EditText
                        android:id="@+id/ketingT"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="客厅"
                        android:textSize="20dp"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#242424"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="卧室"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape">

                    <EditText
                        android:id="@+id/woshiT"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="卧室"
                        android:textSize="20dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/woshi"
                    android:layout_width="156dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="42dp"
                    android:src="@drawable/zeng" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#242424"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="书房"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/shufang"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/zeng" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="66dp"
                    android:background="@drawable/shape">
                <EditText
                    android:id="@+id/shufangT"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="书房"
                    android:textSize="20dp"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#242424"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="餐厅"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="45dp"
                    android:background="@drawable/shape">
                    <EditText
                        android:id="@+id/cantingT"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="餐厅"
                        android:textSize="20dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/canting"
                    android:layout_width="156dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="42dp"
                    android:src="@drawable/zeng" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#242424"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="卫生间"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/weishengjian"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/zeng" />

                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="66dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape">
                <EditText
                    android:id="@+id/weishengjianT"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="卫生间"
                    android:textSize="20dp"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#242424"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="其他"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="45dp"
                    android:background="@drawable/shape">
                    <EditText
                        android:id="@+id/qitaT"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="其他"
                        android:textSize="20dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/qita"
                    android:layout_width="154dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="42dp"
                    android:src="@drawable/zeng" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>