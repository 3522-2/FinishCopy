<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThreeD.ThreeShow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/person"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/re"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/fanhui" />
    </LinearLayout>

    <RelativeLayout
    android:id="@+id/R1"
    android:layout_width="340dp"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/tdshow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="优雅灰色勾勒轻奢质感，139平现代风格美居大赏！" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/view11" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/view12" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/R2"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tdshow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="高级灰蓝色打造131平简约美式风格！" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/view21" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/view22" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/R3"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tdshow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="高颜值北欧风三居室小公寓，舒适惬意!"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/view11" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/view12" />
    </RelativeLayout>

</LinearLayout>